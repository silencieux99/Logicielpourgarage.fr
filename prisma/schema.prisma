generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String?
  phone     String?
  address   String?
  vehicles  Vehicle[]
  invoices  Invoice[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id        String   @id @default(cuid())
  vin       String?  @unique
  plate     String   @unique
  make      String
  model     String
  year      Int?
  color     String?
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  repairs   Repair[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Repair {
  id          String   @id @default(cuid())
  vehicleId   String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  description String
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  items       RepairItem[]
  invoice     Invoice?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RepairItem {
  id        String   @id @default(cuid())
  repairId  String
  repair    Repair   @relation(fields: [repairId], references: [id])
  description String
  quantity  Int
  unitPrice Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invoice {
  id        String   @id @default(cuid())
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  repairId  String?  @unique
  repair    Repair?  @relation(fields: [repairId], references: [id])
  total     Float
  status    String   @default("DRAFT") // DRAFT, PAID, SENT
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
